  "scripts": {
    "docs": "npx quartz build --serve -d docs",
    "check": "tsc --noEmit && npx prettier . --check",
    "format": "npx prettier . --write",
    "test": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js",
    "profile": "NODE_OPTIONS='--enable-source-maps' 0x --output-dir ./prof/ ./node_modules/.bin/tsx ./quartz/bootstrap-cli.ts build --concurrency=1",
    "postinstall": "npx playwright install && patch-package && npm install sharp",
    "test:visual": "npx playwright test",
    "generate:scss": "tsx quartz/styles/generate-variables.ts",
    "setup:python": "pip install pyupgrade autoflake isort autopep8 black ruff"
  },
  "lint-staged": {
    "*.{css,scss,json}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "prettier --write"
    ],
    "*.fish": "fish_indent",
    "{*.sh,.hooks/*}": [
      "shfmt -i 2 -w",
      "shellcheck"
    ],
    "*.py": [
      "ruff check --fix",
      "autoflake --in-place",
      "isort",
      "autopep8 --in-place",
      "black",
      "ruff check --fix"
    ],
    "!(*.vale-styles)/**/*.md": [
      "prettier --write",
      "markdownlint --config .markdownlint.jsonrc --fix"
    ]
  },
  "engines": {
    "npm": ">=9.3.1",
    "node": ">=18.18"
  },
  "keywords": [
    "site generator",
    "ssg",
    "digital-garden",
    "markdown",
    "blog",
    "quartz"
  ],
  "bin": {
    "quartz": "./quartz/bootstrap-cli.ts"
  },
